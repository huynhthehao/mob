<resources>
    <attr name="src" format="integer"/>
    <attr name="textTitle" format="string"/>
    <attr name="textColor" format="color"/>
    <attr name="text" format="string"/>
    <attr name="title" format="string"/>
    <attr name="content" format="string"/>
    <attr name="size" format="dimension"/>
    <attr name="color" format="color"/>

    <declare-styleable name="stfStatefulLayout">
        <attr name="stfLayoutRes" format="integer" />
    </declare-styleable>

    <declare-styleable name="DashboardView">
        <attr name="text" />
        <attr name="size" />
        <attr name="color"/>
        <attr name="src"/>
    </declare-styleable>

    <declare-styleable name="ProfileItemView">
        <attr name="textTitle" />
        <attr name="src"/>
    </declare-styleable>

    <declare-styleable name="HorizontalMasterDetailRowItem">
        <attr name="textTitle" />
        <attr name="src"/>
        <attr name="textColor"/>
    </declare-styleable>

    <declare-styleable name="DefaultTwoColumnsRowItem">
        <attr name="leftText" format="string"/>
        <attr name="rightText" format="string"/>
        <attr name="textColor"/>
        <attr name="verticalPadding" format="dimension" />
        <attr name="leftColumnWeightPercent" format="integer"/>
    </declare-styleable>

    <declare-styleable name="StepIndicator">
        <attr name="currentStep" format="integer" />
        <attr name="numOfSteps" format="integer" />
        <attr name="textSize" format="dimension" />
        <attr name="lineWidth" format="float" />
    </declare-styleable>

    <declare-styleable name="ContractSummaryItemView">
        <attr name="title" />
        <attr name="content" />
        <attr name="color" />
    </declare-styleable>
</resources>