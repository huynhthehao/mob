<resources>
    <declare-styleable name="stfStatefulLayout">
        <attr name="stfLayoutRes" format="integer" />
    </declare-styleable>

    <declare-styleable name="DashboardView">
        <attr name="text" format="string"/>
        <attr name="size" format="dimension"/>
        <attr name="color" format="color"/>

        <attr name="src" format="integer"/>
    </declare-styleable>

    <declare-styleable name="StepIndicator">
        <attr name="currentStep" format="integer" />
        <attr name="numOfSteps" format="integer" />
        <attr name="textSize" format="float" />
        <attr name="lineWidth" format="float" />
        <attr name="padding" format="integer" />
    </declare-styleable>
</resources>