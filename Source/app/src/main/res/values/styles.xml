<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:positiveButtonText">@color/white</item>
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
        <item name="android:textAppearanceButton">@style/AppTheme.TextAppearanceButton</item>

        <item name="android:actionBarTabStyle">@style/AppTabLayout</item>

        <!-- Dialog -->
        <item name="md_positive_color">?attr/colorPrimary</item>
        <!-- End Dialog -->

        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:radioButtonStyle">@style/MyRadioButtonStyle</item>

        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>

    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="Separator_Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/lightGrey</item>
    </style>

    <style name="Separator_Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/lightGrey</item>
    </style>

    <style name="NoTitleActivity" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TextView" parent="android:Widget.TextView">
        <item name="fontFamily">@font/myriadpro_regular</item>
        <item name="android:textColor">@color/brownishGrey</item>
    </style>

    <style name="AppTheme.TextView.Light" parent="android:Widget.TextView">
        <item name="fontFamily">@font/myriadpro_light</item>
        <item name="android:textColor">@color/brownishGrey</item>
    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="fontFamily">@font/myriadpro_regular</item>
        <item name="android:textAppearanceButton">@style/AppTheme.TextAppearanceButton</item>
        <item name="android:height">60dp</item>
    </style>

    <style name="AppTheme.TextAppearanceButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/xlarge_text</item>

    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">?attr/tabTextColor</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.TextLabel" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/greyish</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/orange_500</item>
        <item name="colorControlNormal">@color/brownishGrey</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="AppTheme.TextLabel">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="Fade">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="AppTheme.SectionLabel" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/brownishGrey</item>
        <item name="fontFamily">@font/myriadpro_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.DescriptionLabel" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/brownishGrey</item>
        <item name="fontFamily">@font/myriadpro_regular</item>
    </style>

    <style name="AppTheme.Title" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/brownishGrey</item>
        <item name="fontFamily">@font/myriadpro_regular</item>
    </style>

    <style name="AppTheme.Content" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/brownishGrey</item>
        <item name="fontFamily">@font/myriadpro_regular</item>
    </style>

    <style name="Contact.Section" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/brownishGrey</item>
        <item name="fontFamily">@font/myriadpro_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Contact.Title" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/brownishGrey</item>
        <item name="fontFamily">@font/myriadpro_regular</item>
    </style>

    <style name="Contact.Content" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/brownishGrey</item>
        <item name="fontFamily">@font/myriadpro_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/margin_high</item>
    </style>

    <style name="Contact.Summary.Title" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/brownishGrey</item>
        <item name="fontFamily">@font/myriadpro_regular</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Contact.Summary.Content" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/brownishGrey</item>
        <item name="fontFamily">@font/myriadpro_regular</item>
        <item name="android:layout_marginLeft">@dimen/margin_high</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
    </style>

    <style name="CreditCard.Label" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/brownishGrey</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="fontFamily">@font/myriadpro_regular</item>
    </style>

    <style name="CreditCard.BindingContent" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/brownishGrey</item>
        <item name="fontFamily">@font/myriadpro_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:layout_marginLeft">@dimen/margin_average</item>
    </style>

    <style name="DashBoardItem" parent="android:Widget.TextView">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">120dp</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="DialogAnimation.LeftRight" parent="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

    <style name="AppTheme.SeekBar">
        <item name="android:progressDrawable">@drawable/red_scrubber_progress</item>
        <item name="android:thumb">@drawable/red_scrubber_control</item>
    </style>

    <style name="ClickableView">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <!--<item name="android:windowBackground">@drawable/rounded_corner</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/colorPrimary</item>
        <item name="android:checkedButton">@android:color/holo_purple</item>
    </style>


</resources>
