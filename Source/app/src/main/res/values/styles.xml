<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:positiveButtonText">@color/white</item>
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
        <item name="android:textAppearanceButton">@style/AppTheme.TextAppearanceButton</item>

    </style>

    <style name="Separator_Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/primary_grey</item>
    </style>

    <style name="Separator_Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/primary_grey</item>
    </style>

    <style name="NoTitleActivity" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TextView" parent="android:Widget.TextView">
        <item name="fontFamily">@font/myriadpro_regular</item>
        <item name="android:textColor">@color/brownishGrey</item>
    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="fontFamily">@font/myriadpro_regular</item>
        <item name="android:textAppearanceButton">@style/AppTheme.TextAppearanceButton</item>
    </style>

    <style name="AppTheme.TextAppearanceButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/xlarge_text</item>

    </style>

</resources>
