<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_medium"
    android:paddingLeft="@dimen/padding_small"
    android:paddingRight="@dimen/padding_small"
    android:paddingTop="@dimen/padding_medium">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switchAgree"
        android:thumbTint="@color/colorPrimary"
        android:backgroundTint="@color/colorPrimary"
        android:theme="@style/SwitchCompatTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </android.support.v7.widget.SwitchCompat>

    <TextView
        android:id="@+id/tvTerm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/switchAgree"
        android:text="@string/contract_detail_hint"
        style="@style/AppTheme.DescriptionLabel"

        />

    <Button
        android:id="@+id/btnAgree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTerm"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:imeOptions="actionDone"
        android:text="@string/agreeandsign"
        style="@style/PrimaryButton"

        />
</RelativeLayout>
