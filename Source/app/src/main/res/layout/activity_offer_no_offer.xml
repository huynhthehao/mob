<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="@string/loan_offers"
        style="@style/Toolbar"
        >
    </android.support.v7.widget.Toolbar>

    <ScrollView
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:paddingTop="@dimen/padding_high"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="@dimen/padding_medium"
                android:text="@string/customer_vip"
                style="@style/AppTheme.Title"
                />
            <ImageView
                android:id="@+id/ivHeader"
                android:layout_width="@dimen/icon_header_size"
                android:layout_height="@dimen/icon_header_size"
                app:layout_constraintTop_toBottomOf="@+id/tvHeader"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/ic_offer"
                />
            <ImageView
                android:id="@+id/ivBenefit"
                android:layout_width="@dimen/drawable_left_size_medium"
                android:layout_height="@dimen/drawable_left_size_medium"
                app:layout_constraintTop_toBottomOf="@+id/ivHeader"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/margin_high"
                android:src="@drawable/ic_gift"
                />
            <TextView
                android:id="@+id/tvBenefit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                app:layout_constraintTop_toTopOf="@+id/ivBenefit"
                app:layout_constraintBottom_toBottomOf="@id/ivBenefit"
                app:layout_constraintLeft_toRightOf="@id/ivBenefit"
                android:textStyle="bold"
                android:text="@string/benefit"
                style="@style/AppTheme.TextView"
                />
            <TextView
                android:id="@+id/tvBenefitOffer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                app:layout_constraintTop_toBottomOf="@+id/ivBenefit"
                app:layout_constraintLeft_toLeftOf="@+id/tvBenefit"
                android:paddingRight="@dimen/padding_medium"
                android:text="@string/benefit_vip_offer"
                style="@style/AppTheme.TextView"
                />
            <ImageView
                android:id="@+id/ivHowToVip"
                android:layout_width="@dimen/drawable_left_size_medium"
                android:layout_height="@dimen/drawable_left_size_medium"
                app:layout_constraintTop_toBottomOf="@+id/tvBenefitOffer"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/margin_high"
                android:layout_marginTop="@dimen/margin_high"
                android:src="@drawable/ic_vip_member"
                />

            <TextView
                android:id="@+id/tvHowToVip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                app:layout_constraintTop_toTopOf="@+id/ivHowToVip"
                app:layout_constraintBottom_toBottomOf="@id/ivHowToVip"
                app:layout_constraintLeft_toRightOf="@id/ivHowToVip"
                android:textStyle="bold"
                android:text="@string/how_to_become_vip"
                style="@style/AppTheme.TextView"
                />

            <TextView
                android:id="@+id/tvHowToVipDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:paddingRight="@dimen/padding_medium"
                app:layout_constraintLeft_toLeftOf="@+id/tvHowToVip"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivHowToVip"
                android:text="@string/how_to_become_vip_detail"
                style="@style/AppTheme.TextView"
                />

            <TextView
                android:id="@+id/tvSupport"
                style="@style/AppTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvHowToVipDetail"
                android:layout_marginTop="@dimen/margin_high"
                android:gravity="center_horizontal"
                android:text="@string/tap_to_call_message" />

            <LinearLayout
                android:id="@+id/llCallSupport"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_submit_height"
                app:layout_constraintTop_toBottomOf="@+id/tvSupport"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_average"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_call_center" />

                <TextView
                    android:id="@+id/tvPhoneSupport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_average"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_big" />

            </LinearLayout>


        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>