<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxWidth="@dimen/max_size_marker_info_window">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/infor_image"
                android:layout_width="@dimen/maker_infor_image_size"
                android:layout_height="@dimen/maker_infor_image_size"
                android:contentDescription="@null"
                android:padding="@dimen/appbar_padding_top" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/appbar_padding_top">

                <TextView
                    android:id="@+id/infor_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/max_size_marker_info_title_window"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    tools:text="Marker info title" />

                <TextView
                    android:id="@+id/infor_snipper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/max_size_marker_info_title_window"
                    android:singleLine="false" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>