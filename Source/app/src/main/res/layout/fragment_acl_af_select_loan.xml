<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vn.homecredit.hcvn.ui.acl.applicationForm.AclAfSelectLoan.AclAfSelectLoanFragment" android:background="@color/red_50">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/pleaseSelectTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Please select the loan amount and tenor below" />
    <TextView
        android:id="@+id/loanAmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="50 mil" />
    <SeekBar
        android:id="@+id/loanAmountSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/loanTenorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="36 months" />
    <SeekBar
        android:id="@+id/loanTenorSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

</LinearLayout>
