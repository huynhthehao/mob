<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.more.MoreFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Base.TextAppearance.AppCompat.Headline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_margin"
                        android:text="Customer name"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_margin"
                        android:text="099xxxx099"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary" />

                    <View
                        style="@style/Separator_Horizontal"
                        android:layout_marginHorizontal="@dimen/activity_vertical_margin" />

                    <vn.homecredit.hcvn.ui.widget.MenuRowItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/start_ico"
                        android:text="@string/my_profile"></vn.homecredit.hcvn.ui.widget.MenuRowItem>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <vn.homecredit.hcvn.ui.widget.MenuRowItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/change_pass_ico"
                        android:text="@string/change_password"></vn.homecredit.hcvn.ui.widget.MenuRowItem>

                    <View
                        style="@style/Separator_Horizontal"
                        android:layout_marginHorizontal="@dimen/activity_vertical_margin" />

                    <vn.homecredit.hcvn.ui.widget.MenuRowItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/settings"
                        android:text="@string/settings"></vn.homecredit.hcvn.ui.widget.MenuRowItem>

                    <View
                        style="@style/Separator_Horizontal"
                        android:layout_marginHorizontal="@dimen/activity_vertical_margin" />

                    <vn.homecredit.hcvn.ui.widget.MenuRowItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/payment_location_ico"
                        android:text="@string/locations"></vn.homecredit.hcvn.ui.widget.MenuRowItem>

                    <View
                        style="@style/Separator_Horizontal"
                        android:layout_marginHorizontal="@dimen/activity_vertical_margin" />

                    <vn.homecredit.hcvn.ui.widget.MenuRowItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tc"
                        android:text="@string/terms_and_conditions"></vn.homecredit.hcvn.ui.widget.MenuRowItem>

                    <View
                        style="@style/Separator_Horizontal"
                        android:layout_marginHorizontal="@dimen/activity_vertical_margin" />

                    <vn.homecredit.hcvn.ui.widget.MenuRowItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/user_manual_ico"
                        android:text="@string/user_manual"></vn.homecredit.hcvn.ui.widget.MenuRowItem>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <vn.homecredit.hcvn.ui.widget.MenuRowItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logout_ico"
                        android:text="@string/log_out"></vn.homecredit.hcvn.ui.widget.MenuRowItem>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>