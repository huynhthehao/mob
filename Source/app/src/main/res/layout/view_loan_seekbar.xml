<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_smallest"
        android:gravity="center">

        <TextView
            android:id="@+id/above_min_title"
            style="@style/LoanSeekBar.Title"
            android:gravity="left"
            android:visibility="gone"
            tools:text="5 mil" />

        <TextView
            android:id="@+id/value_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_stroke_normal"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            android:textColor="@color/colorPrimary"
            tools:text="80.000.000 Ä‘" />

        <TextView
            android:id="@+id/above_max_title"
            style="@style/LoanSeekBar.Title"
            android:gravity="right"
            android:visibility="gone"
            tools:text="80 mil" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/below_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/below_min_title"
            style="@style/LoanSeekBar.Title"
            android:gravity="left"
            tools:text="12 months" />

        <TextView
            android:id="@+id/below_max_title"
            style="@style/LoanSeekBar.Title"
            android:gravity="right"
            tools:text="48 months" />
    </LinearLayout>

</merge>